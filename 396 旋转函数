class Solution {
public:
    int maxRotateFunction(vector<int>& A) {
        long N = A.size();
        long S = 0;
        long t = 0;
        for (int i = 0; i < N; ++i) {
            S += A[i];
            t += i * A[i];//æ±‚F0
        }
        long res = t;
        for (int i = N - 1; i >= 0; --i) {
            // F(k+1) = F(k) + S - n * Bk[n-1]
            t += S - N * (long)A[i];
            res = max(res, t);
        }
        return res;
    }
};
